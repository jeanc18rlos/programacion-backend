{
    "version": "2.0.2",
    "compilerOptions": {
      "lib": ["es5", "es6", "dom", "es2017"],
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "removeComments": true,
      "esModuleInterop": true,
      "outDir": "./build",
      "skipLibCheck": true,
      "resolveJsonModule": true,
    },
    "exclude": ["node_modules"]
  }
  